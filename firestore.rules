rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read their own data and allow authenticated users to list users
      allow read, list: if request.auth != null;
      // Allow users to write to their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Alter system collections
    match /users/{userId}/alters/{alterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/alterChats/{alterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/alterChats/{alterId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /chats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /chats/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /wellness_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /task_progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /task_progress/{userId}/daily/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /daily_challenges/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /daily_challenges/{userId}/dates/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Squad support collections
    match /user_squads/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /squad_support/{squadId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /squad_prompts/{promptId} {
      allow read, write: if request.auth != null;
    }

    match /squad_activities/{squadId} {
      allow read, write: if request.auth != null;
    }

    match /squad_activities/{squadId}/activities/{activityId} {
      allow read, write: if request.auth != null;
    }

    match /journal_entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /user_stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_signals/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_signals/{userId}/signals/{signalId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_mood_predictions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_mood_predictions/{userId}/predictions/{predictionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /wellness_groups/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /user_groups/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /group_quests/{questId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /group_activities/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /group_activities/{groupId}/activities/{activityId} {
      allow read, write: if request.auth != null;
    }

    match /user_experiments/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_experiments/{userId}/experiments/{experimentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /experiment_results/{resultId} {
      allow read, write: if request.auth != null;
    }

    match /experiment_insights/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /experiment_insights/{userId}/insights/{insightId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_avatars/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /avatar_conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /avatar_conversations/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /avatar_memories/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /avatar_memories/{userId}/memories/{memoryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /emergency_contacts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /emergency_contacts/{userId}/contacts/{contactId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /safety_plans/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /sos_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /sos_events/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /sos_events/{userId}/events/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /cultural_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /cultural_adaptations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /cultural_adaptations/{userId}/adaptations/{adaptationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Pokemon system collections
    match /userPokemon/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Task management collections
    match /tasks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /tasks/{userId}/daily/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Achievement system collections
    match /achievements/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /achievements/{userId}/achievements/{achievementId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Leaderboard collections (for future use)
    match /leaderboard/{entryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}